<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendProfileActivity">

    <ImageButton
        android:id="@+id/fp_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="646dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fp_setting_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/house" />

    <ImageButton
        android:id="@+id/fp_setting_button"

        android:layout_width="90dp"
        android:layout_height="82dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="646dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gear" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="168dp"
        android:layout_height="183dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="122dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dude3" />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="101dp"
        android:layout_height="65dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/statusButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:text="Tim" />

    <Button
        android:id="@+id/statusButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/white"
        android:text="On Campus"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/fp_message_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileText" />

    <Button
        android:id="@+id/fp_message_button"

        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="208dp"
        android:backgroundTint="@color/white"
        android:text="Message"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusButton" />

    <ImageView
        android:id="@+id/statusPicture"
        android:layout_width="40dp"
        android:layout_height="26dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/statusButton"
        app:layout_constraintEnd_toEndOf="@+id/statusButton"
        app:layout_constraintStart_toStartOf="@+id/statusButton"
        app:layout_constraintTop_toTopOf="@+id/statusButton"
        app:srcCompat="@drawable/green" />
</androidx.constraintlayout.widget.ConstraintLayout>